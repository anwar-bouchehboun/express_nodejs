<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <style>
      table {
        width: 50%;
        border-collapse: collapse;
        margin: 20px auto;
      }
      th,
      td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
      }
      th {
        background-color: #f2f2f2;
      }
    </style>
  </head>
  <body>
    <h1>Bienvenue</h1>
    <form action="/" method="post">
      <br />
      <input type="text" name="username" />
      <br />
      <br />
      <button>Send</button>
    </form>
    <table>
      <tr>
        <th>#</th>
        <th>Username</th>
      </tr>
      <% for (var i = 0; i < arr.length; i++) { %>
      <tr>
        <td><%= i+1 %></td>

        <td><%= arr[i].username %></td>
      </tr>
      <% } %>
    </table>
  </body>
</html>
